# Environment variables for simple-classified app
# Copy this file to .env and fill in your actual values

# Session Secret (change this to a long random string in production)
SECRET=your-super-secret-key-change-this-in-production

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_KEY=your_cloudinary_key
CLOUDINARY_SECRET=your_cloudinary_secret

# Database (for Docker setup)
DB_URL=mongodb://app_user:app_password@mongodb:27017/classified

# Port
PORT=3000

# Node Environment
NODE_ENV=production